def gv

pipeline {
    agent any
    stages {
        stage('init') {
            steps {
                script {
                    gv = load "script.groovy"
                }
            }
        }
        stage('build') {
            steps {
                script {
                    gv.BuildApp()
                }
            }
        }
        stage('test') {
            steps {
                script {
                    gv.TestApp()
                }
            }
        }
        stage('deploy') {
            input {
                message " select the environment to deploy to"
                ok "environment selected"
                parameters {
                    Choice(name:'ENV',choices:['dev','staging','production'],description:'')
                }
            }
            steps {
                script {
                    gv.DeployApp()
                    echo "deploying to ${ENV}"
                }
            }
        }
    }
}
